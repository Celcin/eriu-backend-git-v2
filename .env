# ============================================================================
# ERIU-BACKEND DOCKER COMPOSE CONFIGURATION
# ============================================================================
# This file is read by Docker Compose for variable interpolation.
# Symfony will also read this file plus environment-specific .env files.
# NEVER commit secrets - use .env.local or .env.*.local for sensitive values.

# --- Docker/Environment Configuration ---
COMPOSE_PROFILES=dev
APP_ENV=dev
APP_DEBUG=1

# --- FrankenPHP/Server ---
SERVER_NAME=localhost
HTTP_PORT=80
HTTPS_PORT=443
FRANKENPHP_CONFIG=

# --- MySQL ---
MYSQL_VERSION=8.4
MYSQL_PORT=3306
MYSQL_DATABASE=eriu
MYSQL_USER=eriu
# MYSQL_PASSWORD and MYSQL_ROOT_PASSWORD should be in .env.local

# --- Redis ---
REDIS_VERSION=8.4-alpine
REDIS_PORT=6379
REDIS_MAXMEMORY=256mb

# --- Gotenberg ---
GOTENBERG_VERSION=8
GOTENBERG_PORT=3000
GOTENBERG_TIMEOUT=60s
GOTENBERG_LOG_LEVEL=info

# --- Mailpit ---
MAILPIT_VERSION=v1.29
MAILPIT_UI_PORT=8025
MAILPIT_SMTP_PORT=1025
MAILPIT_MAX_MESSAGES=500

# --- Xdebug ---
XDEBUG_MODE=off
XDEBUG_SESSION=PHPSTORM

# --- Production/Staging Image ---
DOCKER_REGISTRY=
IMAGE_TAG=latest

# --- Timezone ---
TZ=UTC